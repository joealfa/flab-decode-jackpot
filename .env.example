# Fortune Lab Environment Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
DEBUG=False
# SECRET_KEY is auto-generated if not set. Set for persistent sessions across restarts:
# SECRET_KEY=generate-with-python-secrets-token_hex-32
HOST=127.0.0.1
PORT=5000
TESTING=False

# Data Paths (relative to project root)
DATA_PATH=app/data
ANALYSIS_PATH=app/data/analysis
PROGRESS_PATH=app/data/progress
ACCURACY_PATH=app/data/accuracy

# Scraper Configuration
HEADLESS=True
PCSO_URL=https://www.pcso.gov.ph/SearchLottoResult.aspx
PAGE_TIMEOUT=30
MAX_RETRIES=3

# Progress Tracking
PROGRESS_CLEANUP_AGE=300
PROGRESS_POLL_INTERVAL=2
# Automated cleanup intervals (in seconds)
CLEANUP_COMPLETED_AGE=180        # Clean completed tasks after 3 minutes
CLEANUP_STALE_AGE=600            # Clean stale (stuck) tasks after 10 minutes
CLEANUP_OLD_AGE=86400            # Clean any old tasks after 24 hours
CLEANUP_INTERVAL=300             # Run scheduled cleanup every 5 minutes

# Logging Configuration
LOG_LEVEL=INFO

# AI Configuration (Ollama)
OLLAMA_ENABLED=True
OLLAMA_MODEL=llama3.1:8b
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# Analysis Configuration
DEFAULT_PREDICTION_COUNT=5
CACHE_ENABLED=True
CACHE_TTL=3600

# Default Date Range
DEFAULT_START_YEAR=2015
DEFAULT_START_MONTH=1
DEFAULT_START_DAY=1

# Rate Limiting (Future Feature)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_SCRAPE=10 per hour
RATE_LIMIT_ANALYZE=100 per hour
RATE_LIMIT_GENERAL=200 per hour

# Feature Flags
ENABLE_WEBSOCKET=False
ENABLE_API_DOCS=True
ENABLE_METRICS=False
